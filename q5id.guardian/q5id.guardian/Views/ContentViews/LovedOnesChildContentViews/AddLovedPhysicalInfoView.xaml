<?xml version="1.0" encoding="UTF-8" ?>
<base:BaseChildContentView
    x:Class="q5id.guardian.Views.ContentViews.LovedOnesChildContentViews.AddLovedPhysicalInfoView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:control="clr-namespace:q5id.guardian.Controls"
    xmlns:base="clr-namespace:q5id.guardian.Views.Base"
    xmlns:models="clr-namespace:q5id.guardian.Models"
    xmlns:util="clr-namespace:q5id.guardian.Utils">
    <ContentView.Content>
        <Grid>
            <control:AppBoxView
                Margin="0,0,0,0"
                BackgroundColor="#FD425E"
                BottomHeight="45"
                HeightRequest="120"
                HorizontalOptions="Fill"
                VerticalOptions="Start" />
            <ScrollView Padding="0,15,0,0" Orientation="Vertical">
                <StackLayout Orientation="Vertical">
                    <Frame
                        Margin="25,0,25,0"
                        Padding="5,20,5,10"
                        BackgroundColor="White"
                        BorderColor="Transparent"
                        CornerRadius="16"
                        HasShadow="True"
                        HorizontalOptions="Fill"
                        VerticalOptions="Start">
                        <StackLayout
                            Padding="15"
                            Orientation="Vertical"
                            Spacing="0">
                            <Label
                                Margin="30,0,30,0"
                                HorizontalOptions="Fill"
                                HorizontalTextAlignment="Center"
                                LineBreakMode="WordWrap"
                                Style="{StaticResource lbHeaderMd}"
                                Text="Please provide these important physical details."
                                TextColor="{StaticResource redNue}" />
                            <Label
                                Margin="0,30,0,5"
                                HorizontalOptions="Fill"
                                HorizontalTextAlignment="Start"
                                LineBreakMode="WordWrap"
                                Style="{StaticResource lbBodyBoldMd}"
                                Text="Hair Color"
                                TextColor="{StaticResource normalCharcoal}" />
                            <Grid HorizontalOptions="Fill" VerticalOptions="Start">
                                <control:AppPopupPickerView
                                    BorderThickness="2"
                                    FocusBorderColor="#696B7A"
                                    FontSize="14"
                                    HeightRequest="32"
                                    ItemDisplayBinding="{Binding Name}"
                                    ItemsSource="{Binding Source={x:Static util:Constansts.HAIR_COLORS}, Path=.}"
                                    NoramlBorderColor="#E8EAF2"
                                    Placeholder="Choose color"
                                    PlaceholderColor="{StaticResource lightCharcoal}"
                                    SelectedItem="{Binding HairColor}"
                                    TextColor="{StaticResource dimCharcoal}">
                                    <control:AppPopupPickerView.ItemTemplate>
                                        <DataTemplate x:DataType="models:ColorData">
                                            <StackLayout
                                                Padding="10"
                                                Orientation="Horizontal"
                                                Spacing="10">
                                                <Ellipse
                                                    Fill="{Binding HexColor, Converter={StaticResource colorToSolidColorBrushConverter}}"
                                                    HeightRequest="20"
                                                    StrokeThickness="1"
                                                    Stroke="Gray"
                                                    VerticalOptions="Center"
                                                    WidthRequest="20" />
                                                <Label
                                                    HorizontalOptions="Fill"
                                                    Text="{Binding Name}"
                                                    VerticalOptions="Center" />
                                            </StackLayout>
                                        </DataTemplate>
                                    </control:AppPopupPickerView.ItemTemplate>
                                </control:AppPopupPickerView>
                            </Grid>
                            <Label
                                Margin="0,30,0,5"
                                HorizontalOptions="Fill"
                                HorizontalTextAlignment="Start"
                                LineBreakMode="WordWrap"
                                Style="{StaticResource lbBodyBoldMd}"
                                Text="Eye Color"
                                TextColor="{StaticResource normalCharcoal}" />
                            <Grid HorizontalOptions="Fill" VerticalOptions="Start">
                                <control:AppPopupPickerView
                                    BorderThickness="2"
                                    FocusBorderColor="#696B7A"
                                    FontSize="14"
                                    HeightRequest="32"
                                    ItemDisplayBinding="{Binding Name}"
                                    ItemsSource="{Binding Source={x:Static util:Constansts.EYE_COLORS}, Path=.}"
                                    NoramlBorderColor="#E8EAF2"
                                    Placeholder="Choose color"
                                    PlaceholderColor="{StaticResource lightCharcoal}"
                                    SelectedItem="{Binding EyeColor}"
                                    TextColor="{StaticResource dimCharcoal}">
                                    <control:AppPopupPickerView.ItemTemplate>
                                        <DataTemplate>
                                            <StackLayout Padding="10" Orientation="Horizontal">
                                                <Ellipse
                                                    Fill="{Binding HexColor, Converter={StaticResource colorToSolidColorBrushConverter}}"
                                                    HeightRequest="20"
                                                    StrokeThickness="1"
                                                    Stroke="Gray"
                                                    VerticalOptions="Center"
                                                    WidthRequest="20" />
                                                <Label
                                                    HorizontalOptions="Fill"
                                                    Text="{Binding Name}"
                                                    VerticalOptions="Center" />
                                            </StackLayout>
                                        </DataTemplate>
                                    </control:AppPopupPickerView.ItemTemplate>
                                </control:AppPopupPickerView>

                            </Grid>
                            <Label
                                Margin="0,30,0,5"
                                HorizontalOptions="Fill"
                                HorizontalTextAlignment="Start"
                                LineBreakMode="WordWrap"
                                Style="{StaticResource lbBodyBoldMd}"
                                Text="Height"
                                TextColor="{StaticResource normalCharcoal}" />
                            <Grid
                                HorizontalOptions="Start"
                                VerticalOptions="Start"
                                WidthRequest="200">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <control:AppEntry
                                    Grid.Column="0"
                                    Padding="10"
                                    BorderThickness="2"
                                    FocusBorderColor="#696B7A"
                                    FontAttributes="Italic"
                                    FontFamily="PoppinsItalic"
                                    HeightRequest="32"
                                    Keyboard="Numeric"
                                    NoramlBorderColor="#E8EAF2"
                                    Placeholder="Feet"
                                    PlaceholderColor="{StaticResource lightCharcoal}"
                                    Style="{StaticResource etBodyNormalLg}"
                                    Text="{Binding HeightFeet}"
                                    TextColor="{StaticResource normalCharcoal}" />
                                <control:AppEntry
                                    Grid.Column="1"
                                    Padding="10"
                                    BorderThickness="2"
                                    FocusBorderColor="#696B7A"
                                    FontAttributes="Italic"
                                    FontFamily="PoppinsItalic"
                                    HeightRequest="32"
                                    Keyboard="Numeric"
                                    NoramlBorderColor="#E8EAF2"
                                    Placeholder="Inches"
                                    PlaceholderColor="{StaticResource lightCharcoal}"
                                    Style="{StaticResource etBodyNormalLg}"
                                    Text="{Binding HeightInches}"
                                    TextColor="{StaticResource normalCharcoal}" />
                            </Grid>
                            <Label
                                Margin="0,30,0,5"
                                HorizontalOptions="Fill"
                                HorizontalTextAlignment="Start"
                                LineBreakMode="WordWrap"
                                Style="{StaticResource lbBodyBoldMd}"
                                Text="Weight"
                                TextColor="{StaticResource normalCharcoal}" />
                            <control:AppEntry
                                Padding="10"
                                BorderThickness="2"
                                FocusBorderColor="#696B7A"
                                FontAttributes="Italic"
                                FontFamily="PoppinsItalic"
                                HeightRequest="32"
                                HorizontalOptions="Start"
                                Keyboard="Numeric"
                                NoramlBorderColor="#E8EAF2"
                                Placeholder="Pounds"
                                PlaceholderColor="{StaticResource lightCharcoal}"
                                Style="{StaticResource etBodyNormalLg}"
                                Text="{Binding Weight}"
                                TextColor="{StaticResource normalCharcoal}"
                                WidthRequest="200" />
                        </StackLayout>
                    </Frame>
                    <control:AppButton
                        Margin="0,40,0,10"
                        ButtonTitle="NEXT"
                        ButtonTitleSize="12"
                        Clicked="OnNextClicked"
                        CornerRadius="16"
                        HeightRequest="32"
                        HorizontalOptions="Center"
                        NormalBackgroundEndColor="{StaticResource normalCharcoal}"
                        NormalBackgroundStartColor="{StaticResource dimCharcoal}"
                        NormalLabelColor="White"
                        PressedBackgroundColor="{StaticResource dimCharcoal}"
                        PressedLabelColor="LightGray"
                        WidthRequest="97" />
                </StackLayout>
            </ScrollView>
        </Grid>
    </ContentView.Content>
</base:BaseChildContentView>
